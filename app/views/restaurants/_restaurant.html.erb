<div class="card mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <%= image_tag(restaurant.logo_url, class: 'card-img', alt: restaurant.name) %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= link_to(restaurant.name, restaurant_path(restaurant)) %></h5>
        <p class="card-text"><%= restaurant.description %></p>
        <p class="card-text"><small class="text-muted"><%= restaurant.cousine %></small></p>
        <p class="card-text"><small class="text-muted"><%= display_rating(restaurant) %></small></p>
      </div>
    </div>
  </div>
</div>
